<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/main') %>
  </head>
  <% if(typeof err === 'undefined') err = {} %>
  <body>
    <div
      class="d-flex align-items-center justify-content-center"
      style="min-height: 90vh"
    >
      <div class="mt-0 p-4" style="background-color: #e9e9e9; width: 600px">
        <h2 class="text-center">Sign in</h2>
        <form method="post" action="/signin">
          <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              id="username"
              class="form-control"
              name="username"
            />
            <div class="err-message text-danger fst-italic">
              <%= err.username %>
            </div>
          </div>
          <div class="form-group">
            <label for="username" class="form-label">Fullname</label>
            <input
              type="text"
              id="username"
              class="form-control"
              name="fname"
            />
            <div class="err-message text-danger fst-italic">
              <%= err.fname %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword5" class="form-label">Password</label>
            <input
              type="password"
              id="inputPassword5"
              class="form-control"
              name="password"
            />
            <div class="err-message text-danger fst-italic">
              <%= err.password %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword5" class="form-label"
              >Confirm Password</label
            >
            <input
              type="password"
              id="inputPassword5"
              class="form-control"
              name="confirmPw"
            />
            <div class="err-message text-danger fst-italic">
              <%= err.confirmPw %>
            </div>
          </div>
          <div class="d-grid gap-2 my-4">
            <button class="btn btn-primary" type="submit">Sign in</button>
          </div>
          <p class="text-center">
            If you have account before, please login by
            <a href="/">clicking here</a>
          </p>
        </form>
      </div>
    </div>
  </body>
</html>
